<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/tvMostrarQuantidadeVidasProgresso"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5x"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imAtomoVidasProgresso"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/ic_atomovida5" />

        </GridLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="55dp">

            <ImageView
                android:id="@+id/ivImagemConteudo"
                android:layout_width="57dp"
                android:layout_height="54dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_bronze"
                android:visibility="visible" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProgressoNomeConteudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="NomeConteudo"
                android:textColor="#000000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProgressoTentativas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Tentativas"
                android:textColor="#000000"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:gravity="center"
                android:text="Texto de Feedback"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </GridLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>